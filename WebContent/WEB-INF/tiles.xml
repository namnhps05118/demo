<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="admin/*" template="/admin/layout.jsp">
		<put-attribute name="body" value="/admin/{1}.jsp" />
	</definition>
	
    <definition name="*" template="/layout.jsp">
	    <put-attribute name="menu" value="/menu.jsp" />
		<put-attribute name="cart-info" value="/cart-info.jsp" />
		<put-attribute name="search" value="/search.jsp" />
		<put-attribute name="category" value="/category.jsp" />
		<put-attribute name="supplier" value="/supplier.jsp" />
		<put-attribute name="special" value="/special.jsp" />
		<put-attribute name="body" value="/{1}.jsp" />
	</definition>
	
	 <definition name="home" template="/layoutHome.jsp">
	    <put-attribute name="menu" value="/menu.jsp" />
		<put-attribute name="body" value="/home.jsp" />
	</definition>
	
</tiles-definitions>